  "screenshot_validation_requirements": {
    "baseline_management": {
      "creation_triggers": [
        "first_test_run",
        "intentional_ui_changes",
        "new_feature_addition"
      ],
      "update_process": [
        "manual_approval_required",
        "visual_diff_review",
        "stakeholder_sign_off"
      ]
    },
    "comparison_criteria": {
      "similarity_threshold": 0.95,
      "pixel_tolerance": 5,
      "ignore_regions": [
        "timestamps",
        "dynamic_content",
        "loading_indicators"
      ]
    },
    "failure_handling": {
      "auto_fix_scenarios": [
        "minor_spacing_issues",
        "color_inconsistencies",
        "font_size_variations"
      ],
      "manual_review_required": [
        "major_layout_changes",
        "new_ui_components",
        "accessibility_violations"
      ]
